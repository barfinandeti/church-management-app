generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// MULTI-TENANT & AUTH MODELS
// ============================================

enum UserRole {
  SUPERADMIN
  CHURCH_ADMIN
  USER
}

model Church {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  address   String?
  email     String?
  phoneNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users              User[]
  bookSections       BookSection[]
  notifications      Notification[]
  worshipServices    WorshipService[]
  weeklySchedules    WeeklySchedule[]
  liveStreamConfigs  LiveStreamConfig[]
  liveStreamHistory  LiveStreamHistory[]
  prayerRequests     PrayerRequest[]
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         UserRole @default(USER)
  churchId     String?
  church       Church?  @relation(fields: [churchId], references: [id])
  
  isVerified        Boolean   @default(false)
  verificationToken String?

  prayerRequests PrayerRequest[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ============================================
// CONTENT MODELS (All tenant-aware)
// ============================================

model BookSection {
  id        String   @id @default(uuid())
  churchId  String?
  language  String   // "en" or "te"
  title     String
  body      String   // Long text
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  church    Church?  @relation(fields: [churchId], references: [id], onDelete: Cascade)

  @@unique([churchId, language, title])
}

model Notification {
  id        String   @id @default(uuid())
  churchId  String?
  title     String
  message   String
  type      String   // "event" | "reminder" | "info"
  scheduledFor DateTime? // null = post immediately
  isPublished  Boolean  @default(false)
  publishedAt  DateTime?
  createdAt DateTime @default(now())

  church    Church?  @relation(fields: [churchId], references: [id], onDelete: Cascade)
}

model WorshipService {
  id              String   @id @default(uuid())
  churchId        String?
  date            DateTime
  title           String
  orderOfWorship  String   // JSON string
  mainBibleVerses String
  hymnNumbers     String   // JSON string or comma separated
  summary         String?
  createdAt       DateTime @default(now())

  church          Church?  @relation(fields: [churchId], references: [id], onDelete: Cascade)
}

model WeeklySchedule {
  id        String    @id @default(uuid())
  churchId  String?
  weekStart DateTime
  weekEnd   DateTime
  label     String    // "This Week", "Next Week"
  days      DayPlan[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  church    Church?   @relation(fields: [churchId], references: [id], onDelete: Cascade)
}

model DayPlan {
  id          String         @id @default(uuid())
  date        DateTime
  title       String
  bibleVerses String?        // JSON or string
  hymns       String?        // JSON or string
  activities  String?
  weekId      String
  week        WeeklySchedule @relation(fields: [weekId], references: [id], onDelete: Cascade)
}

model LiveStreamConfig {
  id             String   @id @default(uuid())
  churchId       String?
  youtubeVideoId String
  isLive         Boolean  @default(false)
  title          String?
  updatedAt      DateTime @updatedAt

  church         Church?  @relation(fields: [churchId], references: [id], onDelete: Cascade)
}

model LiveStreamHistory {
  id             String   @id @default(uuid())
  churchId       String?
  youtubeVideoId String
  isLive         Boolean
  title          String?
  createdAt      DateTime @default(now())

  church         Church?  @relation(fields: [churchId], references: [id], onDelete: Cascade)
}
